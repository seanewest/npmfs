{
  "npmfs-modules-service": {
    "description": "start npmfs as a service",
    "scripts": {
      "start": "cmd.js"
    },
    "module": "npmfs",
    "env": {
      "NPMFS_MOUNT": {
        "default": "/usr/local/npmfs/node_modules",
        "description": "npmfs node_modules directory"
      }},
    "args": []
  },
  "npmfs-bin-service": {
    "description": "start npmfs as a service",
    "scripts": {
      "start": "cmd.js"
    },
    "module": "npmfs",
    "env": {
      "NPMFS_BIN_MOUNT": {
        "default": "/usr/local/npmfs/bin",
        "description": "npmfs bin directory"
      }
    },
    "args": ["--bin"]
  }
}
